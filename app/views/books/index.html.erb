<% if @book.errors.any? %>
 <%= @book.errors.count %>errors prohibited this obj from being saved:
 <ul>
  <% @book.errors.full_messages.each do |message| %>
   <li><%= message %></li>
  <% end %>
 </ul>
<% end %>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'list', user: @user, book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th>Image</th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
          <th><%= image_tag book.user.get_profile_image %></th>
          <th>
           <%= link_to book_path(book.id) do %>
           <%= book.title %>
           <% end %>
          </th>
          <th><%= book.body %></th>
          </tr>
          <% end %>
        </tbody>


      </table>

    </div>
  </div>

</div>