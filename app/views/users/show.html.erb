<%= flash[:notice] %>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/list', user: @user, book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th>Image</th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
         <% @books.each do |book| %>
         <tr>
          <th><%= image_tag @user.get_profile_image %></th>
          <th><%= link_to book_path(book.id) do %><%= book.title %></th>
          <% end %>
          <th><%= book.body %></th>
         </tr>
         <% end %>
        </tbody>

      </table>


    </div>
  </div>

</div>